@page
@model BookListRazor.Pages.BookList.UpsertModel
@{
}

<br />

<h2 class="text-info">@(Model.Book.Id==0?"Create":"Edit") Book</h2>
<br />
<div class="border container" style="padding:30px;">
    <form method="post">
        <div asp-validation-summary="ModelOnly">     </div>
        <input asp-for="Book.Id" type="hidden" />
        <div class="form-group row">
            <div class="col-6">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-4">
                <input asp-for="Book.Name" class="form-control" />
            </div>
            <span asp-validation-for="Book.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-6">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-4">
                <input asp-for="Book.Author" class="form-control" />
            </div>
            <span asp-validation-for="Book.Author" class="text-danger"></span>

        </div>
        <div class="form-group row">
            <div class="col-6">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-4">
                <input asp-for="Book.ISBN" class="form-control" />
            </div>
            <span asp-validation-for="Book.ISBN" class="text-danger"></span>

        </div>
        <div class="form-group row">
            <div class="col-3 oofset-3">
                <input type="submit" value="@(Model.Book.Id==0?"Create":"Update")" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back To Book List</a>
            </div>
        </div>

    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}